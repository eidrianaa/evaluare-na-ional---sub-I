<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundal pentru stare apăsat -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E69500"/> <!-- Un portocaliu mai închis pentru efectul de apăsat -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Fundal normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- Culoarea portocaliu definită anterior -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
