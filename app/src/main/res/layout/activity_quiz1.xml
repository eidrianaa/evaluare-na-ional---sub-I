<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Întrebarea 1 -->
        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Care este rezultatul lui 5 + 3?"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RadioGroup
            android:id="@+id/answers1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer1_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) 7" />
            <RadioButton
                android:id="@+id/answer1_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) 8" />
            <RadioButton
                android:id="@+id/answer1_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) 9" />
            <RadioButton
                android:id="@+id/answer1_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) 10" />
        </RadioGroup>

        <!-- Întrebarea 2 -->
        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Un obiect costa 1200 lei. Dupa o scumpire de 20%, obiectul va costa:"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RadioGroup
            android:id="@+id/answers2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer2_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) 1220" />
            <RadioButton
                android:id="@+id/answer2_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) 1240" />
            <RadioButton
                android:id="@+id/answer2_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) 1300" />
            <RadioButton
                android:id="@+id/answer2_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) 1500" />
        </RadioGroup>

        <!-- Întrebarea 3 -->
        <TextView
            android:id="@+id/question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Care este valoarea expresiei 3² + 4²?"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RadioGroup
            android:id="@+id/answers3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer3_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) 12" />
            <RadioButton
                android:id="@+id/answer3_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) 24" />
            <RadioButton
                android:id="@+id/answer3_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) 25" />
            <RadioButton
                android:id="@+id/answer3_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) 14" />
        </RadioGroup>

        <!-- Întrebarea 4 -->
        <TextView
            android:id="@+id/question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Ecuatia 3x+mx - 4 = 0 are solutia 1. Valoarea parametrului real m este:"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RadioGroup
            android:id="@+id/answers4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer4_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) 1" />
            <RadioButton
                android:id="@+id/answer4_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) 2" />
            <RadioButton
                android:id="@+id/answer4_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) -2" />
            <RadioButton
                android:id="@+id/answer4_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) 3" />
        </RadioGroup>

        <!-- Întrebarea 5 -->
        <TextView
            android:id="@+id/question5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Care este cel mai mic număr întreg pozitiv divizibil cu 2, 3 și 4?"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RadioGroup
            android:id="@+id/answers5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer5_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) 6" />
            <RadioButton
                android:id="@+id/answer5_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) 12" />
            <RadioButton
                android:id="@+id/answer5_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) 24" />
            <RadioButton
                android:id="@+id/answer5_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) 36" />
        </RadioGroup>

        <!-- Întrebarea 6 -->
        <TextView
            android:id="@+id/question6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Care este rădăcina pătrată a numărului 144?"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RadioGroup
            android:id="@+id/answers6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer6_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) 10" />
            <RadioButton
                android:id="@+id/answer6_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) 12" />
            <RadioButton
                android:id="@+id/answer6_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) 14" />
            <RadioButton
                android:id="@+id/answer6_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) 16" />
        </RadioGroup>

        <!-- Butonul de confirmare -->
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmă răspunsurile"
            android:layout_marginTop="16dp"/>

        <!-- Butonul de întoarcere -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Înapoi"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
